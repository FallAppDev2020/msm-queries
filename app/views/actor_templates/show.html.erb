<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Charcter name
    </th>

    <th>
    </th>
  </tr>

<%@filmo.each do |a_film|%>
  <tr>
    <td>
      <%=Movie.where({ :id => a_film.movie_id}).at(0).title%>
    </td>

    <td>
      <%=Movie.where({ :id => a_film.movie_id}).at(0).year%>
    </td>

    <td>
      <% c = Movie.where({ :id => a_film.movie_id}).at(0).director_id%>
      <%=Director.where({ :id => c}).at(0).name%>
    </td>

    <td>
      <%=a_film.name%>
    </td>

    <td>
      <a href="/movies/<%=a_film.movie_id%>">
        Show details
      </a>
    </td>

  </tr>
  <%end%>
</table>