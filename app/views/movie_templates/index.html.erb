<h1>List of all movies</h1>

<table border="1">

<% @list_of_movies.all.each do |a_thing| %>
  <tr>
    <td><%= a_thing.id %></td>
    <td>
      <img src="http://robohash.org/<%=a_thing.title%>">
    </td>
    <td><%= a_thing.title %></td>
    <td><%= a_thing.year %></td>
    <%# Need to use instance variable that points to director.name for that specific director_id %>
    <td><%= a_thing.director_id %></td>
    <td>
      <a href="/movies/<%= a_thing.id %>">Show details
    </a></td>
  </tr>
<% end %>
</table>